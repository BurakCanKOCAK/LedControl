        android:text="Auto Effect "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#FFFFFF"
        android:background="#60000000"
        tools:layout_editor_absoluteX="906dp"
        tools:layout_editor_absoluteY="27dp" />


