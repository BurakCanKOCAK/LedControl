        android:layout_height="52dp"
        android:layout_x="66dp"
        android:layout_y="636dp"
        android:background="@drawable/nawroz_on_sale" />

    <Button
        android:id="@+id/bBlockD_On"
        android:layout_width="84dp"
        android:layout_height="40dp"
