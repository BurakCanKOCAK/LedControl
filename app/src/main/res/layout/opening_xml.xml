        android:layout_x="14dp"
        android:layout_y="-48dp"
        android:background="@drawable/nawroz_button"
        android:text="Commercial"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bOnSaleType1"
        android:layout_width="68dp"
        android:layout_height="52dp"
        android:layout_x="160dp"
        android:layout_y="-60dp"
        android:background="@drawable/nawroz_on_sale" />

    <Button
        android:id="@+id/bOnSaleType2"
        android:layout_width="68dp"
        android:layout_height="52dp"
        android:layout_x="256dp"
        android:layout_y="-55dp"
        android:background="@drawable/nawroz_on_sale" />

    <Button
        android:id="@+id/bBlockD_On"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_x="359dp"
        android:layout_y="-46dp"
        android:background="@drawable/nawroz_button"
        android:text="Block D"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bBlockDOnSale"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="28dp"
        android:layout_x="473dp"
        android:layout_y="-47dp"
        android:background="@drawable/nawroz_on_sale"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bBlockEOnSale"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="28dp"
        android:layout_x="531dp"
        android:layout_y="-47dp"
        android:background="@drawable/nawroz_on_sale"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/ButtonLEDON"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="885dp"
        android:layout_y="527dp"
        android:background="@drawable/nawroz_button"
        android:text="All On"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bSalesMode"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="101dp"
        android:layout_y="685dp"
        android:background="@drawable/nawroz_off"
        android:text="Sales Mode"
        android:textColor="@android:color/background_light"
        android:textSize="15dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bOnSale"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_x="825dp"
        android:layout_y="527dp"
        android:background="@drawable/nawroz_on_sale" />

    <Button
        android:id="@+id/bEffect"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="885dp"
        android:layout_y="431dp"
        android:background="@drawable/nawroz_button"
        android:text="Effect"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/ButtonLEDOFF"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="885dp"
        android:layout_y="479dp"
        android:background="@drawable/nawroz_button"
        android:text="All Off"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bCommercialOn"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="4dp"
        android:layout_y="803dp"
