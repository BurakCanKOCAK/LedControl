        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bCommercialOff"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="636dp"
        android:background="@drawable/nawroz_button"
        android:text="Commercials Off"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bFlatsOn"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="18dp"
        android:layout_y="479dp"
        android:background="@drawable/nawroz_button"
        android:text="Flats On"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bFlatsOff"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:layout_x="18dp"
        android:layout_y="527dp"
        android:background="@drawable/nawroz_button"
        android:text="Flats Off"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bDisconnect"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_x="-11dp"
        android:layout_y="-57dp"
        android:background="@drawable/antrasit_button_xml_reversed"
        android:onClick="BTOff"
        android:text="Disconnect"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bConnect"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_x="830dp"
        android:layout_y="-57dp"
        android:background="@drawable/antrasit_button_xml"
        android:onClick="BTOn"
        android:text="Connect"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/salesListBackground"
        android:layout_width="190dp"
        android:background="@drawable/sales_list"
        android:layout_height="400dp"
        android:layout_x="-73dp"
        android:visibility="invisible"/>
    <ListView
        android:id="@+id/lvSoldList"
        style="@style/horizontalList"
        android:layout_width="105dp"
        android:layout_height="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_x="4dp"
        android:layout_y="5dp"
        android:gravity="center_vertical"
        android:paddingTop="50px"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bA2BlOCK"
        android:layout_width="286dp"
        android:layout_height="121dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="28dp"
        android:layout_x="373dp"
        android:layout_y="52dp"
        android:background="@drawable/selectblock"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bA1BlOCK"
        android:layout_width="147dp"
        android:layout_height="241dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="28dp"
        android:layout_x="710dp"
        android:layout_y="208dp"
        android:background="@drawable/selectblock"
        android:textColor="@android:color/background_light" />

    <Switch
        android:id="@+id/autoEffect"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_x="887dp"
        android:layout_y="383dp"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:text="Auto Effect "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="906dp"
        tools:layout_editor_absoluteY="27dp" />

</AbsoluteLayout>