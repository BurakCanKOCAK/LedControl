<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelLay_keyboard"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/back_black" >

    <LinearLayout
        android:id="@+id/one_to_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="2" >

        <Button
            android:id="@+id/bTop"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/top_button"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/seven_to_nine2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/bBTOn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btonxml"
                android:text="BT ON"
                android:textColor="@android:color/background_light"
                android:textSize="15dp" />

            <Button
                android:id="@+id/bBTOff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btoff_xml"
                android:text="BT OFF"
                android:textColor="@android:color/background_light"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Connection Awaiting"
            android:textColor="@android:color/darker_gray"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tvDatatoSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingTop="50dp"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="125dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oneAnan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/one_to_three2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tvBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_to_three2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@+id/one_to_three"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/bMainMenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="Main Menu"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bErase"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="Erase"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_to_three3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/four_to_six"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/bOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bThree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/four_to_six"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/seven_to_nine"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/bFour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bFive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bSix"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seven_to_nine"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/zeroline"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/bSeven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bEight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bNine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zeroline"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="27dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/bOff"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/off_button"
            android:text="OFF"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bZero"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bOn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/on_button"
            android:text="ON"
            android:textColor="@android:color/background_light"
            android:textSize="25dp" />
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:content="@+id/content"
        android:handle="@+id/bhandle" >

        <Button
            android:id="@+id/bhandle"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@drawable/slider_button"
            android:text="^"
            android:textColor="@android:color/background_light"
            android:textSize="40dp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blacky"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="::: Functions :::"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_light"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvBTStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="BT STATUS CONTROL"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:id="@+id/seven_to_nine222222"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/b2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:text="Block"
                    android:textColor="@android:color/background_light"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/b3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:text="Block On Sales"
                    android:textColor="@android:color/background_light"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zeroliness"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="4" >

                <EditText
                    android:id="@+id/eT_sell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />

                <Button
                    android:id="@+id/bSell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:text="Set as Sold" />

                <Button
                    android:id="@+id/bUnSell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:text="Set as Not Sold" />

                <Button
                    android:id="@+id/onSale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:text="Show on Sales" />
            </LinearLayout>
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>